<p>ここが<%= @room.room_name %>です </p>
<%= %>

<% if flash[:notice] %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% end %>
<% if flash[:alert] %>
  <div class="alert alert-danger">
   <%= flash[:alert] %>
  </div>
<% end %>
 <table>
 	<% @chats.each do |chat| %>
 	<thead>
 		<tr>
 			<th><%= chat.name %> </th>
 			<th><%= chat.job %></th>
 			<th><p>画像</p></th>
 			<th><%= chat.content %></th>
 		</tr>
 	</thead>
 	<% end %>
 </table>
<%= form_tag(room_chats_path(@room.id), :remote => true, :id =>"chats_form" ) do %>
 <p><%= current_user.name %><%= current_user.job %> 画像</p>
 	<input type="text" name="content">
    <!-- <input type="submit" value="発言"> -->
    <%= submit_tag "送信", :id =>"sub_btn" %>
<% end %>
